<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp">

        <TextView
            android:id="@+id/group_name"
            android:layout_width="304dp"
            android:layout_height="61dp"
            android:layout_weight="1"
            android:gravity="left"
            android:text="Group Name"
            android:textAlignment="gravity"
            android:textAllCaps="false"
            android:textSize="20sp" />

        <ImageButton
            android:id="@+id/more_btn"
            style="@style/Theme.EventCal"
            android:layout_width="101dp"
            android:layout_height="63dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:contentDescription="More button"
            android:visibility="gone"
            app:srcCompat="@drawable/arrow_dropdown_down"
            app:tint="@color/green_dark" />

        <Button
            android:id="@+id/join_btn"
            style="@style/Theme.EventCal"
            android:layout_width="101dp"
            android:layout_height="63dp"
            android:layout_weight="1"
            android:background="@color/green"
            android:contentDescription="Join Button"
            android:text="Join"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:visibility="visible"
            app:srcCompat="@android:drawable/ic_menu_more"
            app:tint="@color/green_dark" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/more_info_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/light_gray"
        android:visibility="gone"> <!-- Initially hidden -->

        <TextView
            android:id="@+id/group_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hidden group info"
            android:background="@color/light_gray"
            android:textSize="20sp" />

        <!-- Add more info views here as needed -->

    </LinearLayout>
</LinearLayout>