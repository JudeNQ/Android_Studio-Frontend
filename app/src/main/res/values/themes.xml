<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.EventCal" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Add these attributes to resolve the missing attributes error -->
        <item name="colorPrimary">@color/green</item>
        <item name="colorPrimaryVariant">@color/green_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:statusBarColor">@color/green_dark</item>
        <item name="android:navigationBarColor">@color/green</item>
    </style>

    <style name="GroupDialogTheme" parent="Theme.AppCompat.Dialog">
        <item name="android:background">@color/green</item>
    </style>

    <style name="CustomGroupDialogTitle" parent="TextAppearance.AppCompat.Large">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/green</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="CustomDialogGroupButton" parent="Widget.AppCompat.Button">
        <item name="android:backgroundTint">@color/green_dark</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TouchTargetButton">
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:padding">8dp</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
    </style>

</resources>
